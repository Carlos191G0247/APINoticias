<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="NoticiaMAUI.Views.MainView"
             xmlns:vm="clr-namespace:NoticiaMAUI.ViewModels"
             xmlns:mo="clr-namespace:NoticiaMAUI.Models"
             Title="MainView" x:DataType="vm:ViewModel" 
             Shell.NavBarIsVisible="False"
             >
    <Grid >
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"></RowDefinition>
            <RowDefinition ></RowDefinition>
        </Grid.RowDefinitions>
        <VerticalStackLayout>
            <Image Source="logo2.jpg"></Image>

            <Button HorizontalOptions="End" Grid.Row="1" Text="SESION" Command="{Binding VerInicioSesionView}"></Button>
        </VerticalStackLayout>
        <ScrollView Grid.Row="1">

        <CollectionView  ItemsSource="{Binding NoticiaList}">
            <CollectionView.ItemsLayout>
                <GridItemsLayout Orientation="Vertical">
                </GridItemsLayout>
            </CollectionView.ItemsLayout>

            <CollectionView.ItemTemplate>
                <DataTemplate x:DataType="mo:Noticia" >

                    <Grid >
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="auto"></ColumnDefinition>
                            <ColumnDefinition Width="auto"></ColumnDefinition>
                        </Grid.ColumnDefinitions>

                        <Grid HeightRequest="100" WidthRequest="100">
                            <Image Aspect="Fill" Margin="8"  Source="logo.jpg"   ></Image>
                       </Grid> 
                        <VerticalStackLayout Grid.Column="1">
                            
                            <Label  FontSize="30" Text="{Binding Titulo}" TextColor="Black" ></Label>
                            <Label  FontSize="30" Text="{Binding Contenido}" TextColor="Black"  ></Label>
                            <Label  FontSize="30" Text="{Binding Fecha}" TextColor="Black"  ></Label>
                        </VerticalStackLayout>
                       



                    </Grid>


                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
        </ScrollView>

    </Grid>
</ContentPage>